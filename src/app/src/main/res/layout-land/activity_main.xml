<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#FFBB33"
    android:padding="20dp"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <ImageView android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="200dp"

            android:src="@drawable/shopping_cart"
            android:layout_gravity="center"
            android:contentDescription="@string/logo_land" />

        <TextView android:id="@+id/main_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/main_title"
            android:textStyle="bold"
            android:textColor="#CC0000"
            android:textSize="40sp"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <Button android:id="@+id/button_shopping"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:background="#33B5E5"

            android:text="@string/button_shopping"
            android:textSize="26sp"
            android:textColor="#000099"

            android:onClick="goShopping"
            android:layout_gravity="center"
            android:enabled="false"
            android:textStyle="bold"
            android:layout_marginBottom="30dp" />

        <Button android:id="@+id/button_planning"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:background="#669900"

            android:text="@string/button_plan"
            android:textSize="26sp"
            android:textColor="#003300"

            android:onClick="planShopping"
            android:layout_gravity="center"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>