<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#007A00"
    android:padding="20dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/label_bar"
        >

        <TextView android:id="@+id/text_label_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/text_label_product"
            android:textColor="#ffffff"
            android:textSize="16sp"
            />

        <TextView android:id="@+id/text_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:text="@string/text_label_quantity"
            android:textColor="#ffffff"
            android:textSize="16sp"
            />

        <TextView android:id="@+id/text_unit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:text="@string/text_label_unit"
            android:textColor="#ffffff"
            android:textSize="16sp"
            />

        <TextView android:id="@+id/text_label_checked"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            />


    </LinearLayout>

